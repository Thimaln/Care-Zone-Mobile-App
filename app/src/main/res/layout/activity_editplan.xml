<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC633"
    tools:context=".Editplan">

    <Button
        android:id="@+id/btnbackadd"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/button_custom"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnupdate" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_custom"
        android:text="UPDATE"
        app:layout_constraintBottom_toTopOf="@+id/btnbackadd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittxtupdate" />

    <EditText
        android:id="@+id/edittxtupdate"
        android:layout_width="376dp"
        android:layout_height="220dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/edittxt_custom"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/btnupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerup" />

    <Spinner
        android:id="@+id/spinnerup"
        android:layout_width="376dp"
        android:layout_height="71dp"
        android:layout_marginTop="304dp"
        android:layout_marginBottom="6dp"
        android:background="#A3F3E5F5"
        android:entries="@array/Spinner_items"
        app:layout_constraintBottom_toTopOf="@+id/edittxtupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="438dp"
        android:layout_height="266dp"
        android:layout_marginBottom="7dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/spinnerup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pic_03" />

</androidx.constraintlayout.widget.ConstraintLayout>

